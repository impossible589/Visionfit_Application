<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:padding="24dp"
    android:background="@drawable/rounded_bg"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/tvDialogTitle"
        android:text="Set Daily Push-ups Target"
        android:textColor="#222"
        android:textStyle="bold"
        android:textSize="18sp"
        android:layout_marginBottom="8dp"  android:layout_height="wrap_content" android:layout_width="wrap_content"/>

    <EditText
        android:id="@+id/etInput"
        android:hint="Daily Target .."
        android:inputType="number"
        android:background="@drawable/edittext_bg2"
        android:padding="10dp"

        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
</LinearLayout>
