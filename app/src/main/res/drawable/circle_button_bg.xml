<?xml version="1.0" encoding="utf-8"?>
<ripple xmlns:android="http://schemas.android.com/apk/res/android"
    android:color="#33FFFFFF">

    <item>
        <shape android:shape="oval">
            <solid android:color="#1A1A2E"/> <!-- Inner background color -->
            <stroke
                android:width="1dp"
                android:color="#33FFFFFF"/> <!-- Subtle outline -->
            <size
                android:width="60dp"
                android:height="60dp" /> <!-- Circle size -->
            <corners android:radius="100dp"/>
        </shape>
    </item>

</ripple>
